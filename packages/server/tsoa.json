{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*.controller.ts"],
  "spec": {
    "basePath": "",
    "host": "localhost:3000",
    "outputDirectory": "openapi",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt_access": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "flow": "implicit",
        "scopes": {
          "users_read": "",
          "users_write": "",
          "finances_read": "",
          "finances_write": "",
          "contracts_read": "",
          "contracts_write": ""
        }
      }
    }
  },
  "routes": {
    "authenticationModule": "src/middlewares/authentication.ts",
    "routesDir": "src/generated"
  }
}
